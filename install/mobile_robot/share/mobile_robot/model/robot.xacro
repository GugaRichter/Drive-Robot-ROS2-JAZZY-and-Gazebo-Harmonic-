<?xml version="1.0"?>
<robot name="differential_drive_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
<!--**********************-->
<!--Geometria e constantes-->
<!--**********************-->
<xacro:property name="pi_const" value="3.14159265"/>


<!--Dimensoes do corpo-->
    <xacro:property name="a" value="1" />
    <xacro:property name="b" value="0.3" />
    <xacro:property name="c" value="0.6" />

<!--Dimensoes da roda e do direcional-->
<!--Raio da Roda e do direcional-->
    <xacro:property name="r" value="0.15"/>
<!--Tamanho da roda-->
    <xacro:property name="d" value="0.1"/>


    <xacro:property name="s1" value="${b/2+r}"/>
    <xacro:property name="s2" value="${2*r}"/>
    <xacro:property name="s3" value="${2*r}"/>
    <xacro:property name="s4" value="${c/2+d/2}"/>


<!--Massa e inercia-->

<!--Densidade do material do corpo-->
    <xacro:property name="d1" value="2710.0"/>
<!--Densidade do material da roda-->
    <xacro:property name="d2" value="2710.0"/>
<!--Densidade do material do direcional-->
    <xacro:property name="d3" value="2710.0"/>

<!--Massa do robo, direcional e roda-->
<!--Corpo-->
    <xacro:property name="m1" value="${d1*a*b*c}"/> 
<!--Roda-->
    <xacro:property name="m2" value="${d2*pi_const*r*r*d}"/>
<!--Direcional-->
    <xacro:property name="m3" value="${d3*(4.0/3.0)*pi_const*r*r*r}"/>

<!--Momento de inercia do corpo-->
    <xacro:property name="Ix_body" value="${(1.0/12.0)*m1*(b*b+c*c) }"/>
    <xacro:property name="Iy_body" value="${(1.0/12.0)*m1*(a*a+b*b) }"/>
    <xacro:property name="Iz_body" value="${(1.0/12.0)*m1*(a*a+c*c) }"/>

<!--Momento de inercia da roda-->
     <!--Ix e Iy sao iguais entao escrever simplificado-->
    <xacro:property name="Iz_wheel" value="${0.5*m2*r*r }"/>
    <xacro:property name="I_wheel" value="${(1.0/12.0)*m2*(3*r*r+d*d) }"/>

<!--Momento de inercia do direcional-->
    <xacro:property name="I_caster" value="${(2.0/5.0)*m3*r*r }"/>

<!--Macro para criar o momento inicial de inercia do robo-->
    <xacro:macro name="inertia_body">
        <inertial>
        <!--Orientacao do centro de massa-->
        <origin rpy="0 0 0" xyz="0 0 ${s1}" />
        <mass value="${m1}"/>
        <inertia ixx="${Ix_body}" ixy="0.0" ixz="0.0" iyy="${Iy_body}" iyz="0.0" izz="${Iz_body}" />
        </inertial>
    </xacro:macro>

<!--Macro para criar o momento inicial de inercia da roda do robo-->
    <xacro:macro name="inertia_wheel">
        <inertial>
        <!--Orientacao do centro de massa-->
        <origin rpy="1.570795 0 0" xyz="0 0 0" />
        <mass value="${m2}"/>
        <inertia ixx="${I_wheel}" ixy="0.0" ixz="0.0" iyy="${I_wheel}" iyz="0.0" izz="${Iz_wheel}" />
        </inertial>
    </xacro:macro>

<!--Macro para criar o momento inicial de inercia do direcional do robo-->
    <xacro:macro name="inertia_caster">
        <inertial>
        <!--Orientacao do centro de massa-->
        <origin rpy="0 0 0" xyz="0 0 ${s1}" />
        <mass value="${m3}"/>
        <inertia ixx="${I_caster}" ixy="0.0" ixz="0.0" iyy="${I_caster}" iyz="0.0" izz="${I_caster}" />
        </inertial>
    </xacro:macro>

<xacro:include filename="$(find mobile_robot)/model/robot.gazebo" />

<link name="base_footprint"> </link>
<joint name="body_link_joint" type="fixed">
   <parent link="base_footprint"/>
   <child link="body_link"/>
    
</joint>

<!--Body-Link do robo-->
<link name="body_link">
    <visual>
            <geometry>
                <box size="${a} ${c} ${b}" />
            </geometry>

        <origin rpy="0 0 0" xyz="0.0 0.0 ${s1}" />
    </visual>

    <collision>
        <geometry>
            <box size="${a} ${c} ${b}" />
        </geometry>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 ${s1}" />
    </collision>

    <xacro:inertia_body />
    
</link>

<!--Roda direita traseira do robo-->

<joint name="wheel1_joint" type="continuous">
    <parent link="body_link" />
    <child link="wheel1_link" />
    <origin xyz="${-s2} ${-s4} ${r}" rpy="0 0 0" />
    <axis xyz="0.0 1.0 0.0"/>
    <limit effort="50000" velocity="10"/>
    <dynamics damping="1.0" friction="1.0" />
    
</joint>

<link name="wheel1_link">
    <visual>
            <origin rpy="1.570795 0.0 0.0" xyz="0.0 0.0 0.0" />
            <geometry>
                    <cylinder length="${d}" radius="${r}" />
            </geometry>
    </visual>
    
    <collision>
            <origin rpy="1.570795 0.0 0.0" xyz="0.0 0.0 0.0" />
            <geometry>
                <cylinder length="${d}" radius="${r}" />
            </geometry>
    </collision>
    
    <xacro:inertia_wheel />

</link>

<!--Roda esquerda traseira do robo-->

<joint name="wheel2_joint" type="continuous">
    <parent link="body_link" />
    <child link="wheel2_link" />
    <origin xyz="${-s2} ${s4} ${r}" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
    <limit effort="50000" velocity="10"/>
    <dynamics damping="1.0" friction="1.0" />
    
</joint>

<link name="wheel2_link">
    <visual>
            <origin rpy="1.570795 0.0 0.0" xyz="0.0 0.0 0.0" />
            <geometry>
                    <cylinder length="${d}" radius="${r}" />
            </geometry>
    </visual>
    
    <collision>
            <origin rpy="1.570795 0.0 0.0" xyz="0.0 0.0 0.0" />
            <geometry>
                <cylinder length="${d}" radius="${r}" />
            </geometry>
    </collision>
    
    <xacro:inertia_wheel />

</link>

<!--Roda do direcional-->

<joint name="caster_joint" type="fixed">
        <parent link="body_link"/>
        <child link="caster_link"/>
        <origin xyz="${s3} 0 ${r}" rpy="0.0 0.0 0.0" />
    
</joint>

<link name="caster_link">
    <visual>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0" />
            <geometry>
                <sphere radius="${r}"/>
            </geometry>
    </visual>

    <collision>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0" />
            <geometry>
                <sphere radius="${r}"/>
            </geometry>
    </collision>
    <xacro:inertia_caster />
    
</link>


</robot>
